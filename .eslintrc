{
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "rules": {
      "no-console" : ["error"],
      "max-len": ["error", { "code": 200 }],
      "no-underscore-dangle": ["off"],
      "class-methods-use-this": "off",
      "no-plusplus": "off",
      "no-multiple-empty-lines": ["error", { "max": 1}]
    }
  }
  